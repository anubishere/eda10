package inl1;
import se.lth.cs.p.inl1.*;
import se.lth.cs.p.inl1.nbr7.*;
import se.lth.cs.p.inl1.TextView;
public class Inl1 {

	public static void main(String[] args) {
		
		TextWindow textWindow = new TextWindow("Chiffrering");
		
		
		TextView klarTexten = new TextView("Klartext: ", 20, 70);
		TextView myCiphertext = new TextView("Min chiffrering: ", 20, 70);
		TextView correctCipher = new TextView("Korrekt chiffrering: ", 20, 70);
		
		textWindow.addView(klarTexten);
		textWindow.addView(myCiphertext);
		textWindow.addView(correctCipher);
		for(int i = 0; i < 5; i++) {
			klarTexten.displayText("Burundi");
		}

	}

}
