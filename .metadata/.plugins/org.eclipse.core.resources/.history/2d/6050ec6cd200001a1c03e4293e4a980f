        System.out.println(nbrDays);
    }
    
    public static int calcNbrDays(int wantedSum) {
    	int sum = 1, dailySum=1;
			int dagar = 0;
			
			for(int i = 1; i < sum; i++){
			    sum += Math.pow(2,i);
			    return nbrDays;
			}
    }
}




